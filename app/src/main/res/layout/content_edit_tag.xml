<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tooldroid.simplenfctimer.EditTagActivity"
    tools:showIn="@layout/activity_edit_tag">

    <TextView
        android:id="@+id/textView"
        android:layout_width="72dp"
        android:layout_height="40dp"
        android:text="Name"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/nameEditText"
        android:layout_marginRight="10dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="26dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="323dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Put name of the tag here"
        android:layout_marginRight="19dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="19dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/nameEditText"
        android:id="@+id/linearLayout"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#c0c0c0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="73dp"
        android:layout_height="40dp"
        android:text="Time"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <Spinner
        android:id="@+id/hourSpinner"
        android:layout_width="63dp"
        android:layout_height="42dp"
        android:layout_marginTop="43dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginLeft="26dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="26dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hours"
        app:layout_constraintLeft_toRightOf="@+id/hourSpinner"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="68dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginStart="16dp" />

    <Spinner
        android:id="@+id/minuteSpinner"
        android:layout_width="68dp"
        android:layout_height="44dp"
        app:layout_constraintLeft_toRightOf="@+id/textView4"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="43dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginStart="70dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="min"
        android:layout_marginTop="68dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginStart="30dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/minuteSpinner"
        android:layout_marginLeft="30dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginEnd="8dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/hourSpinner"
        android:id="@+id/linearLayout1"
        android:layout_marginTop="31dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:background="#c0c0c0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="89dp"
        android:layout_height="40dp"
        android:text="Ring Type"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <Spinner
        android:id="@+id/typeSpinner"
        android:layout_width="275dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>
